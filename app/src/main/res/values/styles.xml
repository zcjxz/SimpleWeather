<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="whiteFont">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="MyCardView">
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="suggestImg">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:padding">16dp</item>
    </style>
    <style name="suggestBrf">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="suggestText">
        <item name="android:textSize">11sp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>
    <style name="MainActivityStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!--Customize your theme here. -->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <style name="MyDialogStyle" parent="@android:style/Theme.Dialog">
        <!-- <item name="android:windowBackground">@drawable/select_group_backgroud</item>背景透明
        <item name="android:windowFrame">@null</item>边框
        <item name="android:windowNoTitle">true</item>无标题
        <item name="android:windowIsFloating">true</item>是否浮现在activity之上
        <item name="android:windowIsTranslucent">true</item>半透明
        <item name="android:windowContentOverlay">@null</item>内容覆盖
        <item name="android:backgroundDimEnabled">true</item>模糊
        <item name="android:backgroundDimAmount">0.1</item>设置模糊程度1最大,默认为0.5 -->

        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/black_l</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
